<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hillssoft.mtom"
    android:versionCode="2"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />
    
    
	<protected-broadcast android:name="android.intent.action.SUPERSK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- #receiver  -->
        <receiver android:name=".sample.receiver.AlertReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SUPERSK"/>
                <data android:scheme="sample"/>
            </intent-filter>
        </receiver>
        
        
        
        
        
        <activity
            android:name=".MainTabActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        
        
        
        
        <activity
            android:name=".SampleTabActivity"
            android:label="@string/title_activity_test_tab" >
        </activity>
        <activity
            android:name=".TestTabActivity"
            android:label="@string/title_activity_test_tab" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ActivityOpenActivity"
            android:label="@string/activity_title_activity_open_activity" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ActivityOpenSubActivity"
            android:label="@string/title_activity_activity_open_sub" >
            <intent-filter>
                <action android:name="android.intent.action.ActivityTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ViewObjectActivity"
            android:label="@string/activity_title_view_object_test" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ListViewActivity"
            android:label="@string/activity_title_list_view" >
            <intent-filter>
                <action android:name="android.intent.action.ActivityTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ListViewDetailActivity"
            android:label="@string/title_activity_list_view_detail" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.GraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.BroadcastActivity"
            android:label="@string/title_activity_broadcast" >
        </activity>
    </application>

</manifest>