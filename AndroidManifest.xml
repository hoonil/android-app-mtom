<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hillssoft.mtom"
    android:versionCode="16"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="5"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver
            android:name="com.hillssoft.mtom.sample.receiver.StartReceiver"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.hillssoft.mtom.sample.receiver.AlertReceiver" >
            <intent-filter>
                <action android:name="StaticBroadcastReceiver" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.hillssoft.mtom.MainTabActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hillssoft.mtom.SampleTabActivity"
            android:label="@string/title_activity_test_tab" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.TestTabActivity"
            android:label="@string/title_activity_test_tab" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ActivityOpenActivity"
            android:label="@string/activity_title_activity_open_activity" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ActivityOpenSubActivity"
            android:label="@string/title_activity_activity_open_sub" >
            <intent-filter>
                <action android:name="android.intent.action.ActivityTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ViewObjectActivity"
            android:label="@string/activity_title_view_object_test" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ListViewActivity"
            android:label="@string/activity_title_list_view" >
            <intent-filter>
                <action android:name="android.intent.action.ActivityTest" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ListViewDetailActivity"
            android:label="@string/title_activity_list_view_detail" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.GraphActivity"
            android:label="@string/title_activity_graph" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.BroadcastActivity"
            android:label="@string/title_activity_broadcast" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name="com.hillssoft.mtom.sample.DBActivity"
            android:label="@string/title_activity_db" >
        </activity>
    </application>

</manifest>